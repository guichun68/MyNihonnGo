<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="10.0dip" >

	<TextView 
	    android:id="@+id/tv_word"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="調べる"
	    android:layout_marginLeft="8dp"
	    android:textSize="17sp"
	    android:textStyle="bold"/>
	
	<TextView
	    android:id="@+id/tv_kanna"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="[しらべる]"
	    android:textSize="14sp"
	    android:textColor="@color/gray"
	    android:layout_marginLeft="7dp"
	    android:layout_toRightOf="@id/tv_word"
	    />
	
	<TextView
	    android:id="@+id/tv_wordtype"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/tv_word"
	    android:layout_marginLeft="8dp"
	    android:text="【他动词·一段/二类】"
	    android:textSize="14sp"
	    android:layout_marginTop="3dp"
	    android:textColor="@color/gray_h"/>
	
	
	<TextView
	    android:id="@+id/tv_name_cn"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="调查;审查"
	    android:layout_alignTop="@id/tv_wordtype"
	    android:layout_toRightOf="@id/tv_wordtype"
	    android:textColor="@color/gray_h"
	    />

	<TextView
	    android:id="@+id/tv_tone"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignBaseline="@+id/tv_kanna"
	    android:layout_alignBottom="@+id/tv_kanna"
	    android:layout_toRightOf="@+id/tv_kanna"
	    android:text="@string/three_tone"
	    android:layout_marginLeft="5dp"
	    android:textColor="@color/gray"
	    android:textSize="14sp" />

</RelativeLayout>